<view name="main">

<div id="todoapp">
	<header id="create-todo">
		<h1>Todos</h1>
		<input id="new-todo" type="text" placeholder="What needs to be done?"
			onkeypress="<%= todos.actions.add_keypress %>">
	</header>
	<call view="tasks" />
	<call view="stats" data="data.stats" />
</div>
<div id="instructions">
	Double-click to edit a todo.
</div>
<div id="credits">
	Created by <a href="http://mck.me">Stephen McKamey</a>.
</div>
